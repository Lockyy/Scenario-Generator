<div class="row">
  <div class="col-xs-12 title">
    Scenario Generator Index
  </div>
</div>

<div class="row generator-links">
  <% @games.each do |key, value| %>
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-0 generator">

      <%= link_to content_tag('div', value, class: 'link-text'), 
        generator_path(game: key),
        class: 'link-header' %>

    </div>
  <% end %>
</div>