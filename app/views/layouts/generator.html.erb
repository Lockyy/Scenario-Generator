<!DOCTYPE html>
<html>
  <head>
    <title>Challenge Generator for <%= @title %></title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    "generator", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="initial-scale=1">
  </head>
  <body class="generator" style="background: url(<%= asset_path(@background) %>)">
    <div id="wrapper">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="container">
        <%= render 'layouts/header' %>
        <%= render 'layouts/bottom_ad' %>
        <% if @spoiler_alert_display %>
            <%= render 'layouts/spoiler_alert' %>
        <% end %>
        <%= yield %>
        <%= render 'layouts/top_ad' %>
    </div>
  

    <%= render 'layouts/footer' %>

    <script>
        $(".menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

  </body>
</html>
