<!DOCTYPE html>
<html>
  <head>
    <title>Challenge Generator for <%= @title %></title>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    "generator", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="initial-scale=1">
    <%= render 'layouts/inspectlet' %>
  
    <script type="text/javascript">
      (function() {
        window.PA_SITE_ID = 2665963857610;
        var u='//pleasant-api.elasticbeanstalk.com/';
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'pleasant.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
    <noscript><img src='//pleasant-api.elasticbeanstalk.com/pleasant.gif' /></noscript>
  </head>
  <body class="generator" style="background-image: url(<%= asset_path(@background) %>)">
    <div id="wrapper">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="container">
        <%= render 'layouts/header' %>
        <%= render 'layouts/ad_top' %>
        <%= yield %>
        <%= render 'layouts/ad_bottom' %>
    </div>
  

    <%= render 'layouts/footer' %>
    <%= render 'layouts/ad_setup' %>

    <script>
        $(".menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

  </body>
</html>
