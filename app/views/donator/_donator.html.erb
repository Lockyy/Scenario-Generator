<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-4">
  <div class="donator box">
    <div class="row">
      <div class="col-xs-4 image-holder">
        <% if donator.image_url %>
          <%= image_tag donator.image_url %>
        <% else %>
          <div class="image-placeholder"><div class="image-text">Donator</div></div>
        <% end %>
      </div>
      <div class="col-xs-8">
        <div class="row">
          <div class="col-xs-12">
            <div class="name">
              <%= donator.name %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="link">
              <% if donator.link_url %>
                <%= link_to donator.link_name, donator.link_url %>
              <% else %>
                &nbsp;
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>