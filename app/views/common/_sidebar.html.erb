<div id="sidebar-wrapper">
    <ul class="sidebar-nav">
        <li class="menu-toggle sidebar">
            <a href="#">Close Menu</a>
        </li>
        <hr>
        <li>
            <a href="/">Game Index</a>
        </li>
        <li>
            <a href="/donators">Donators</a>
        </li>
        <li>
            <a href="/faq">FAQ</a>
        </li>
        <li>
            <a href="https://github.com/Lockyy/scenario-generator", class: 'sidebar-github-link'>Github Repo</a>
        </li>
        <hr>
        <% @games.each do |key, value| %>
            <li class="<%= 'new' if ScenarioGenerator.new?(key) %><%= 'updated' if ScenarioGenerator.updated_recently?(key) %>">
                <%
                    name = value
                    name += ' - New!' if ScenarioGenerator.new?(key)
                    name += ' - Updated!' if ScenarioGenerator.updated_recently?(key)
                %>
                <%= link_to name, generator_path(game_name: key) %>
            </li>
        <% end %>
    </ul>
</div>