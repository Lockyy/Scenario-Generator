$('.subscribe .errors').empty();
$('.subscribe .success').empty();
$('.subscribe .errors').html('<%= flash[:error]%>');
$('.subscribe .success').html('<%= flash[:success]%>');
<% if flash[:error] == nil || flash[:error].include?('already subscribed') %>
  $('#new_alert')[0].reset();
<% end %>
setTimeout(function() {
  $('.subscribe .errors').empty();
  $('.subscribe .success').empty();
}, 3000);