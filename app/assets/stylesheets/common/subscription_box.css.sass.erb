$h-background: $a-background
$h-color: $a-color
$h-button-background: #31A33A
$h-button-color: black

.subscribe, .suggestion
<% active_colours.each do |code| %>
  &.<%= code %>
    background: $<%= code %>-background
    color: $<%= code %>-color
    .button
      background: $<%= code %>-button-background
      color: $<%= code %>-button-color
      &:hover, &:active, &:focus
        background: darken($<%= code %>-button-background, 10) !important
<% end %>