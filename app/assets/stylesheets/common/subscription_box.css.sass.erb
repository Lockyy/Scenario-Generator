<% active_colours = Version.active_versons %>

$red-background: $a-background
$red-color: $a-color
$red-button-background: #BD1313
$red-button-color: black

$pink-background: $a-background
$pink-color: $a-color
$pink-button-background: #C845D6
$pink-button-color: black

$blue-background: $a-background
$blue-color: $a-color
$blue-button-background: #3777DE
$blue-button-color: black

$green-background: $a-background
$green-color: $a-color
$green-button-background: #31A33A
$green-button-color: black

.subscribe, .suggestion
<% active_colours.each do |code| %>
  &.<%= code %>
    color: $<%= code %>-color
    .button
      background: $<%= code %>-button-background
      color: $<%= code %>-button-color
      &:hover, &:active, &:focus
        background: darken($<%= code %>-button-background, 10) !important
<% end %>

.suggestion
  color: $a-color